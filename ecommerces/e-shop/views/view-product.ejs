<!DOCTYPE html>
<html lang="en">

<head>
    <title>View Products</title>
    <%- include('_externallink.ejs')%>
</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <%- include('_siderbar.ejs')%>
            <!-- End of Sidebar -->

            <!-- Content Wrapper -->
            <div id="content-wrapper" class="d-flex flex-column">

                <!-- Main Content -->
                <div id="content">

                    <!-- Topbar -->
                    <%- include('_topbar.ejs')%>
                        <!-- End of Topbar -->

                        <!-- Begin Page Content -->
                        <div class="container-fluid">
                            <!-- Page Heading -->
                            <div class="d-sm-flex align-items-center justify-content-between mb-4">
                                <h1 class="h3 mb-0 text-gray-800">Product-List</h1>
                            </div>

                            <table class="table table-hover table-inverse table-responsive">
                                <thead>
                                    <tr>
                                        <th>S.no</th>
                                        <th>Product</th>
                                        <th>Product Name</th>
                                        <th>Description</th>
                                        <th>Price</th>
                                        <th>Discount(%)</th>
                                        <th>Rating</th>
                                        <th>Stock</th>
                                        <th>Category</th>
                                        <th>Brand</th>

                                        <th>Delete</th>
                                    </tr>
                                </thead>
                                <%let Index=0;%>
                                    <%for(let products of productList){%>
                                        <tr>
                                            <td>
                                                <%=Index+1%>
                                            </td>
                                            <td>
                                                <a href="/product/view/<%=products.id%>">
                                                    <img src="<%=products.thumbnail%>" alt="image kaha hai"
                                                        style="height:14vh;width:11vw;border-radius: 20%;">
                                                </a>
                                            </td>
                                            <td>
                                                <%=products.title%>
                                            </td>
                                            <td>
                                                <%=products.description.substring(0,45)%>.....
                                            </td>
                                            <td>
                                                <%=products.price%>
                                            </td>
                                            <td>
                                                <%=products.discountPercentage%>
                                            </td>
                                            <td>
                                                <%=products.rating%>
                                            </td>
                                            <td>
                                                <%=products.stock%>
                                            </td>
                                            <td>
                                                <%=products.category%>
                                            </td>
                                            <td>
                                                <%=products.brand%>
                                            </td>

                                            <td><a href="/product/delete/<%=products.id%>"
                                                    onclick="return confirm('Are you sure?')"><button
                                                        class="btn btn-outline-danger">Delete</button> </a></td>

                                        </tr>
                                        <%Index++;%>
                                            <%}%>

                            </table>

                            <!-- Content Row -->


                        </div>
                        <!-- /.container-fluid -->

                </div>
                <!-- End of Pagination Content -->
                <nav aria-label="Page navigation example">
                    <ul class="pagination">
                        <li class="page-item">
                            <a class="page-link" href="#" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                        <li class="page-item"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item">
                            <a class="page-link" href="#" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                    </ul>
                </nav>

                <!-- Footer -->
                <footer class="sticky-footer bg-white">
                    <div class="container my-auto">
                        <div class="copyright text-center my-auto">
                            <span>Copyright &copy; Your Website 2021</span>
                        </div>
                    </div>
                </footer>
                <!-- End of Footer -->

            </div>


    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">Ã—</span>
                    </button>
                </div>
                <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                    <a class="btn btn-primary" href="login.html">Logout</a>
                </div>
            </div>

        </div>

    </div>


</body>

</html>